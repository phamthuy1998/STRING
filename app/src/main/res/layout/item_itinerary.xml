<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_itinerary"
        android:layout_width="203dp"
        android:layout_height="203dp"
        android:layout_marginEnd="10dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image_post"
        android:scaleType="centerCrop"
        android:src="@drawable/grass" />

    <TextView
        android:id="@+id/tv_location_itinerary"
        style="@style/txtWhiteBig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_location"
        android:drawablePadding="@dimen/margin15"
        android:drawableTint="@color/colorWhite"
        android:ellipsize="end"
        android:maxWidth="200dp"
        android:maxLines="2"
        android:padding="@dimen/padding_btn"
        android:textStyle="bold" />
</FrameLayout>