<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5">

        <ImageView
            android:id="@+id/iv_interest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/image_item"
            android:src="@drawable/img_medium" />

        <CheckBox
            android:id="@+id/cb_interest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_item_interest"
            android:button="@null" />

        <ImageView
            android:id="@+id/im_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:layout_marginTop="@dimen/margin15"
            android:layout_marginEnd="@dimen/margin15"
            android:background="@drawable/ic_checkbox"
            android:contentDescription="@string/checkbox" />

        <TextView
            android:id="@+id/tv_title_interest"
            style="@style/txtWhiteSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/culture"
            android:textStyle="bold" />
    </FrameLayout>

</LinearLayout>